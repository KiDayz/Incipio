                        {{ form_errors(form.signataire1) }}
                    </div>
                </div>
                <div class="row" style="margin-top: 25px">
                    <div class="col-md-12 col-xs-12">
                        {{ form_label(form.phases) }}
                        {{ form_widget(form.phases, {'attr': {'style': 'width:100%'}}) }}
                        {{ form_errors(form.phases) }}

                    </div>
                </div>
            </div>
