<div class="panel panel-primary" data-role="mission">
    <div class="panel-heading">
        <div class="row">
            <div class="col-xs-12 col-sm-4 worker">
                {{ form_label(form.intervenant) }}
                {{ form_widget(form.intervenant, {'attr': {'class': 'select2-multiple'}}) }}
                {{ form_errors(form.intervenant) }}
            </div>
        </div>
    </div>
    <div class="panel-body">

        <div class="row">
            <div class="col-xs-12 col-md-8">
                <div class="row">

                    <div class="col-xs-12 col-sm-4 col-md-3">
                        {{ form_label(form.debutOm) }}<br>
                        {{ form_widget(form.debutOm) }}
                        {{ form_errors(form.debutOm) }}
                    </div>
                    <div class="col-xs-12 col-sm-4 col-md-3">
                        {{ form_label(form.finOm) }}<br>
                        {{ form_widget(form.finOm) }}
