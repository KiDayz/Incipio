                    </div>
                    <div class="col-xs-12 col-sm-4 col-md-3">
                        {{ form_label(form.pourcentageJunior) }}<br>
                        {{ form_widget(form.pourcentageJunior) }}
                        {{ form_errors(form.pourcentageJunior) }}
                    </div>
                    <div class="col-xs-12 col-sm-4 col-md-3">
                        {{ form_label(form.referentTechnique) }}<br>
                        {{ form_widget(form.referentTechnique, {'attr': {'class': 'select2-multiple'}}) }}
                        {{ form_errors(form.referentTechnique) }}
                    </div>
                </div>
                <div class="row" style="margin-top: 10px">
                    <div class="col-xs-12 col-sm-4 col-md-3">
                        {{ form_label(form.version) }}<br>
                        {{ form_widget(form.version) }}
                        {{ form_errors(form.version) }}
                    </div>
                    <div class="col-xs-12 col-sm-4 col-md-3">
                        {{ form_label(form.dateSignature) }}<br>
                        {{ form_widget(form.dateSignature) }}
